<% doc_presenter = show_presenter(document) %>
<%# default partial to display solr document fields in catalog show view -%>
<h5 class="text-muted"><%= document._source["display_date"] %></h5>

<div class="row">
	<% if document._source["file"].present? %>
        <div class="col-lg-6 order-lg-2">
			<% if document._source["iiif"][0] == "true" %>
				<div class="uv" data-locale="en-GB:English (GB),cy-GB:Cymraeg" data-config="" data-uri="<%= document._source["representative_media"] %>/manifest" data-collectionindex="0" data-manifestindex="0" data-sequenceindex="0" data-canvasindex="0" data-rotation="0" style="width:100%; height: 500px; background-color: #000"></div><script type="text/javascript" id="embedUV" src="https://archives.albany.edu/universalviewer/dist/uv-2.0.1/lib/embed.js"></script><script type="text/javascript">/* wordpress fix */</script>
			<% else %>
				<iframe id="pdfViewer" src=<%= document._source["file"] %> class="embededPDF"></iframe>
			<% end %>
            <div class="btn-btm">
                <a href="https://archives.albany.edu/history-editor/events/<%= document._source["id"] %>/edit" type="button" class="btn btn-light float-right edit-btm">Edit</a>
            </div>
		</div>
        
		<div class="col-lg-6 order-lg-1">
			<div class="card-body">
				<p class="card-text"><%= document._source["description"] %></p>
          	</div>

	        <% if document._source["subjects"].present? %>
	            <div class="card-body">
	              <h4>Subjects</h4>
	              <ul class="list-group mb-3">
	                <% document._source["subjects"].sort.each do |subject| %>
	                  <a href="/catalog?f[subjects][]=<%= subject %>" class="list-group-item list-group-item-action list-group-item-info"><%= subject %></a>
	                <% end %>
	              </ul>
	            </div>
	        <% end %>

	        <% if document._source["citation_description"].present? %>
	            <div class="card-body">
	                <h4>Source Details</h4>
	                <p class="card-text"><%= document._source["citation_description"] %></p>
	            </div>
	        <% end %>

	        <% if document._source["citation_files"].present? %>
	            <div class="card-body container">
	              
	              <h4>Source Materials</h4>
	              <div class="row">
	                <% document._source["citation_files"].each_with_index do |cite, index| %>
	                <div class="col-6 d-flex pb-3">
	                <div class="card" style="width: 18rem; display:block">
	                  <img height="150px" style="display:block;margin: auto;" src="<%= cite %>?file=thumbnail">
	                  <div class="card-body">
	                    <a href="<%= document._source["citation_links"][index] %>" class="card-link"><%= document._source["citation_text"][index] %></a>
	                  </div>
	                </div>
	                </div>
	                <% end %>
	              </div>

	            </div>
	        <% end %>
		</div>
	<% else %>

		<div class="col-12">
			<dl class="row dl-invert document-metadata">
			  <% doc_presenter.fields_to_render.each do |field_name, field, field_presenter| -%>
			    <dt class="blacklight-<%= field_name.parameterize %> col-md-3"><%= render_document_show_field_label document, label: field_presenter.label, field: field_name %></dt>
			    <dd class="blacklight-<%= field_name.parameterize %> col-md-9"><%= CGI.unescapeHTML(field_presenter.render).html_safe  %></dd>
			  <% end -%>
			</dl>
			<a href="https://archives.albany.edu/history-editor/events/<%= document._source["id"] %>/edit" type="button" class="btn btn-light float-right">Edit</a>
		</div>

	<% end %>
</div>